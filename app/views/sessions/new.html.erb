<h1>Log In</h1>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>

<%= form_with url: login_path, method: :post, local: true do %> 
  <div> 
    <%= label_tag :username %>
    <%= text_field_tag :username %> 
  </div>
  <div>
    <%= label_tag :password %> 
    <%= password_field_tag :password %> 
  </div> 
  <%= submit_tag "Login" %> 
<% end %>

<p><%= link_to "Don't have an account? Create one here!", signup_path %></p>
