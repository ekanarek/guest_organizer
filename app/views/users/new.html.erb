<h1>Sign Up</h1>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>

<% if @user.errors.any? %>
  <div style="color: red;">
    <h2><%= pluralize(@user.errors.count, "error") %> prevented this account from being created:</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, url: users_path, local: true do |f| %>
  <div>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>

  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <div>
    <%= f.submit "Create Account" %>
  </div>
<% end %>

<p><%= link_to "Already have an account? Log in here!", login_path %></p>
